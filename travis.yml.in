language: python
python:
- '3.6'
install:
- find -name '*requirements.txt' -exec pip install -r {} \;
script: make -f ./build-scripts/project.mk publish
sudo: false
branches:
  only:
  - master
before_install:
- openssl aes-256-cbc -K $encrypted_{FILL-ME1}_key -iv $encrypted_{FILL-ME1}_iv
  -in travis/deploy_key.enc -out ~/deploy_key -d
- openssl aes-256-cbc -K $encrypted_{FILL-ME2}_key -iv $encrypted_{FILL-ME2}_iv
  -in travis/pypirc.enc -out ~/.pypirc -d
- chmod 600 ~/deploy_key
- eval $(ssh-agent -s)
- ssh-add ~/deploy_key
